#路径
exports.getJavaDirPath = ( options )->
	basedir = options.BASE_DIR
	app = options.APP
	module = options.MODULE
	funcName = options.FUNCTION.toLowerCase()
	return basedir + app + '/java/src/com/v6/' + app + '/' + module + '/' + funcName + '/'
	
