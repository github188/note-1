#包名
exports.getPackageByPath = ( javapath )->
	temarr = javapath.split 'com/v6/'
	tmppack = temarr[1]
	rlt = 'com.v6'
	rlt += ( '.'+str ) for str in ( tmppack.split '/' )[0..-2]
	return rlt
	
