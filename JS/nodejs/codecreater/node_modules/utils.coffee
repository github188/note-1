#java文件名称
exports.getJavaName = ( funcName )->
	arr = funcName.split '/'
	funcName = arr[arr.length-1]
	return funcName.substring( 0, 1 ).toUpperCase() + funcName.substring( 1 )
#jsp文件名称
exports.getJspName = ( funcName )->
	arr = funcName.split '/'
	funcName = arr[arr.length-1]
	return funcName.toLowerCase() + '_main.jsp'
#jsp文件名称
exports.getConfName = ( funcName )->
